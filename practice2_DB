SELECT DISTINCT c.cn , c.cc
	FROM depositor AS d,customer AS c , account AS a
	WHERE d.cn = c.cn 
		AND d.an = a.an  
		AND bn = 'Perryridge' 
		AND d.cn 
			IN(SELECT cn 
				FROM borrower,loan 
				WHERE borrower.ln = loan.ln 
					AND bn = 'Perryridge');
/*
